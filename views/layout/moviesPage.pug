  section.filterSection
    button.filterBtn.fa-solid.fa-xmark.fa-2xl
    .filterMenu
      p Filter by genres
      .tagsContainer
        button.tags.drama Drama
        button.tags.adventure Adventure
        button.tags.crime Crime
        button.tags.action Action
        button.tags.Comedy Comedy
        button.tags.sci Sci-Fi
        button.tags.fantacy Fantacy
        button.tags.kids Kids
      hr.line
      p Filter by released year
      section.filterByInputSection
        form.containerLeft
          input.input.releaseYfrom(type="number", min="1900", max="2025", placeholder="Release year from")
          p To
          input.input.releaseYto(type="number", min="1900", max="2025", placeholder="Release year to")
        form.containerRight
          input.input.ratingFrom(type="number", step="0.1", min="1", max="10", placeholder="Rating from")
          p To
          input.input.ratingTo(type="number", step="0.1", min="1", max="10", placeholder="Rating to")
      hr.line
      button.submitBtn Submit Filter

  section.moviesSection
    hr.moviesLine
    .cardContainer
      each movie in movies
        .movieCard
          if movie.attributes.image
            img.moviesImg(src=movie.attributes.image.url, alt="")
          .cardInfo
            h2.moviesName #{movie.attributes.title}
